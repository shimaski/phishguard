{
    "manifest_version": 3,
    "name": "PhishGuard",
    "version": "1.0.0",
    "description": "Detects homoglyph and homograph phishing attacks",
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "assets/icon16.png",
            "24": "assets/icon24.png",
            "32": "assets/icon32.png"
        },
        "default_popup": "popup/popup.html",
        "default_title": "PhishGuard - No threats detected"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [{
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
    }]
}